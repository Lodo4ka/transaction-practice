generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  balance   Int      @default(0)
  version   Int      @default(1)
  operationsSender Operation[] @relation("Sender")
  operationsReceiver Operation[] @relation("Receiver")
}

model Operation {
  id        Int      @id @default(autoincrement())
  amount    Int
  userIdSender Int
  userIdReceiver Int
  userSender User @relation("Sender", fields: [userIdSender], references: [id])
  userReceiver User @relation("Receiver", fields: [userIdReceiver], references: [id])
  date        DateTime @default(now())
  status      OperationStatus @default(PENDING)
}

enum OperationStatus {
  SUCCESS
  FAILED
  PENDING
}
